{
  "name": "authflow-backend",
  "version": "1.0.0",
  "description": "AuthFlow is the production-level authentication & authorization project.",
  "keywords": [
    "login",
    "signup",
    "authentication",
    "authorization",
    "mern",
    "postgresql",
    "prisma",
    "javascript",
    "typescript",
    "zod",
    "redis",
    "react",
    "node",
    "express"
  ],
  "license": "ISC",
  "author": "Harshit Kumar",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch src -e ts,json --exec \"ts-node src/index.ts\"",
    "build": "npx tsc",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.dev -- npx prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env -- npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harshitclub/AuthFlow.git"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/hpp": "^0.2.6",
    "@types/morgan": "^1.9.9",
    "@types/winston": "^2.4.4",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "prisma": "^6.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
